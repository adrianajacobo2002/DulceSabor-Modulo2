<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modal Example</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <!-- Botón que activa la modal -->
    <button type="button" class="btn btn-primary bg-dark" data-toggle="modal" data-target="#exampleModal">
        Abrir Modal
    </button>

    <!-- Modal -->
    <div class="modal modal-xl-centered" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">


                    <div class="container">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs border-dark" id="myTabs" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active text-dark" id="tab1-tab" data-toggle="tab" href="#tab1" role="tab" aria-controls="tab1" aria-selected="true">Entradas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" id="tab2-tab" data-toggle="tab" href="#tab2" role="tab" aria-controls="tab2" aria-selected="false">Platos Principales</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" id="tab3-tab" data-toggle="tab" href="#tab3" role="tab" aria-controls="tab3" aria-selected="false">Postres</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" id="tab4-tab" data-toggle="tab" href="#tab4" role="tab" aria-controls="tab4" aria-selected="false">Bebidas</a>
                            </li>
                        </ul>

                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tabDisponible">
                                <div class="row py-4 d-flex">
                                    <h5 class="py-3">Agregar Platillos</h5>

                                    <div class="col-md-4 py-3">
                                        <div class="card">
                                            <div class="card-body">
                                                <h5 class="card-title mb-2">Entrada 1</h5>
                                                <h6 class="card-subtitle mb-2 text-body-secondary">Precio: $00.00</h6>
                                                <label for="exampleFormControlTextarea1" class="form-label">Comentarios</label>
                                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="5"></textarea>
                                                <input class="btn btn-dark my-3" type="submit" value="Agregar">
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="tabOcupadas">
                                <div class="row py-4 d-flex">
                                    <h5 class="py-3">Agregar Platillos</h5>

                                    <div class="col-md-4 py-3">
                                        <div class="card">
                                            <div class="card-body">
                                                <h5 class="card-title mb-2">Plato 1</h5>
                                                <h6 class="card-subtitle mb-2 text-body-secondary">Precio: $00.00</h6>
                                                <label for="exampleFormControlTextarea1" class="form-label">Comentarios</label>
                                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="5"></textarea>
                                                <input class="btn btn-dark my-3" type="submit" value="Agregar">
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="tab-pane fade" id="tab3" role="tabpanel" aria-labelledby="tabOcupadas">
                                <div class="row py-4 d-flex">
                                    <h5 class="py-3">Agregar Platillos</h5>

                                    <div class="col-md-4 py-3">
                                        <div class="card">
                                            <div class="card-body">
                                                <h5 class="card-title mb-2">Postre 1</h5>
                                                <h6 class="card-subtitle mb-2 text-body-secondary">Precio: $00.00</h6>
                                                <label for="exampleFormControlTextarea1" class="form-label">Comentarios</label>
                                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="5"></textarea>
                                                <input class="btn btn-dark my-3" type="submit" value="Agregar">
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="tab-pane fade" id="tab4" role="tabpanel" aria-labelledby="tabOcupadas">
                                <div class="row py-4 d-flex">
                                    <h5 class="py-3">Agregar Platillos</h5>

                                    <div class="col-md-4 py-3">
                                        <div class="card">
                                            <div class="card-body">
                                                <h5 class="card-title mb-2">Bebida 1</h5>
                                                <h6 class="card-subtitle mb-2 text-body-secondary">Precio: $00.00</h6>
                                                <label for="exampleFormControlTextarea1" class="form-label">Comentarios</label>
                                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="5"></textarea>
                                                <input class="btn btn-dark my-3" type="submit" value="Agregar">
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="container">

                        <div class="row py-4 d-flex">
                            <h5 class="py-3">Agregar Combos</h5>

                            <div class="col-md-4 py-3">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title mb-2">Combo 1</h5>
                                        <h6 class="card-subtitle mb-2 text-body-secondary">Precio: $00.00</h6>
                                        <label for="exampleFormControlTextarea1" class="form-label">Comentarios</label>
                                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="5"></textarea>
                                        <input class="btn btn-dark my-3" type="submit" value="Agregar">
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>

                    <div class="container">

                        <div class="row py-4 d-flex">
                            <h5 class="py-3">Agregar Promoción</h5>


                            <div class="col-md-4 py-3">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title mb-2">Promocion 1</h5>
                                        <h6 class="card-subtitle mb-2 text-body-secondary">Precio: $00.00</h6>
                                        <label for="exampleFormControlTextarea1" class="form-label">Comentarios</label>
                                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="5"></textarea>
                                        <input class="btn btn-dark my-3" type="submit" value="Agregar">
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary bg-dark">Guardar cambios</button>
                </div>
            </div>
        </div>
    </div>


    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
