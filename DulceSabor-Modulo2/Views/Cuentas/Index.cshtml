<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h1>Cuentas</h1>

            <!-- Nav tabs -->
            <ul class="nav nav-tabs border-dark" id="myTabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active text-dark" id="tab1-tab" data-toggle="tab" href="#tab1" role="tab" aria-controls="tab1" aria-selected="true">Abiertas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-danger" id="tab2-tab" data-toggle="tab" href="#tab2" role="tab" aria-controls="tab2" aria-selected="false">Cerradas</a>
                </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
                    <p>Cuenta en operacion</p>


                    <div class="card mb-3 w-100 p-1 border-dark">
                        <div class="row g-0">

                            <div class="col-md-10">
                                <div class="card-body">
                                    <h5 class="card-title">Mesa #</h5>
                                    <p>Order #</p>
                                    <p class="card-text"><small class="text-muted">Nombre cuenta</small></p>
                                </div>
                            </div>
                            <div class="col-md-2 d-flex align-items-center justify-content-center">
                                <button class="btn btn-dark w-100 rounded ">Filtrar</button>
                            </div>

                        </div>
                    </div>



                </div>
                <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="tab2-tab">
                    <p>Cuenta finalizada</p>

                    <div class="card mb-3 w-100 p-1  border-dark ">
                        <div class="row g-0">

                            <div class="col-md-10">
                                <div class="card-body">
                                    <h5 class="card-title">Mesa #</h5>
                                    <p>Order #</p>
                                    <p class="card-text"><small class="text-muted">Nombre cuenta</small></p>
                                </div>
                            </div>
                            <div class="col-md-2 d-flex align-items-center justify-content-center">
                                <button class="btn btn-dark w-100 rounded-pill  ">Filtrar</button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-md-2 mt-5">
            <h1>filtrar</h1>
            <!-- Filtro por ID -->
            <input type="text" id="filtroId" class="form-control mb-2" placeholder="ID">
            <button class="btn btn-dark w-100 rounded-pill" onclick="filtrarPorId()">Filtrar</button>
        </div>

    </div>
</div>

<!-- Scripts -->
